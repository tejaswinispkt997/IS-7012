@page
@model RecruitCatSapkotti.Pages.Companys.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Company Details</h1>

<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Industry.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MinimumSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MinimumSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MaximumSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MaximumSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.OptionalStartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.OptionalStartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyDescription)
        </dd>
    </dl>
    @if (Model.Company.Candidates!=null)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].Company)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].TargetSalary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].OptionalStartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].EmailAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].YearsOfExperience)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].UniversityCgpa)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Company.Candidates)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Company.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TargetSalary)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OptionalStartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmailAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.YearsOfExperience)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UniversityCgpa)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
